@model List<OnlineShop.Models.CartItem>
@{
    ViewBag.Title = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count > 0)
{

    <table class="table" style="margin-top:10%">
        <thead>
            <tr>
                <td>Mã SP</td>
                <td>Tên SP</td>

                <td>Ảnh SP</td>
                <td>Số lượng</td>
                <td>Đơn giá</td>
                <td>Thành tiền</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.ID</td>
                    <td>@item.Product.Name</td>

                    <td><img href="@item.Product.Image" width="100" /></td>
                    <td><input type="text" class="txtQuantity" data-id="@item.Product.ID" value="@item.Quantity" /></td>
                    <td>@item.Product.Price</td>
                    <td>@(item.Quantity * item.Product.Price)</td>
                    <td> <a href="#" class="btnDelete" data-id="@item.Product.ID">Xoá</a> </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="section group">
        <div class="col-6">
            @using (Html.BeginForm("Payment", "Cart", FormMethod.Post))
            {
                <div class="form-group">
                    <lable>Người nhận</lable>
                    <input name="shipName" class="form-control" />
                </div>
                <div class="form-group">
                    <lable>Điện thoại</lable>
                    <input name="mobile" class="form-control" />
                </div>
                <div class="form-group">
                    <lable>Địa chỉ</lable>
                    <input name="address" class="form-control" />
                </div>
                <div class="form-group">
                    <lable>Email</lable>
                    <input name="email" class="form-control" />
                </div>
                <button type="submit" class="btn">Mua hàng</button>
            }
        </div>
    </div>

}
